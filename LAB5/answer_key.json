db.posts.aggregate([
    { 
        "$unwind": "$tags" 
    },
    { 
        "$group": {
            "_id": "$tags",
            "count": {
                "$sum": 1
            }
        }
    },
    {
        "$sort": {
            "count": -1
        }
    }
])

db.inspections.aggregate([
    {
        "$match": {
            "address.city": "JAMAICA",
            "result": "Fail"
        }        
    },
    {
        "$group": {
            "_id": "$address.zip",
            "count": {
                "$sum": 1
            }
        }
    },
    {
        "$sort": {
            "count": -1
        }
    }
])

db.stories.aggregate([
    {
        "$unwind": "$shorturl"
    },
    {
        "$group": {
            "_id": "$media",
            "average": {
                "$avg": "$shorturl.view_count"
            }
        }
    }
])


db.tweets.aggregate([
    {
        "$unwind": "$entities.user_mentions"
    },
    {
        "$group": {
            "_id": "$entities.user_mentions.id",
            "mentions": {
                "$sum": 1 
            }
        }
    },
    {
        "$sort": {
            "mentions": -1
        }
    }
])

db.movies.aggregate([
    {
        "$unwind": "$cast"
    },
    {
        "$group": {
            "_id": "$cast",
            "average": {
                "$avg": "$tomatoes.viewer.rating"
            }
        }
    },
    {
        "$sort": {
            "average": -1
        }
    },
    {
        "$limit": 10
    }
]).pretty()